<form action="{{ action }}" method="post">
  <input type="hidden" name="site_code" value="{{ site_code }}" />
  <input type="hidden" name="site_url" value="{{ site_url }}" />
  <input type="hidden" name="posturl" value="{{ posturl }}" />
  <input type="hidden" name="returnurl" value="{{ returnurl }}" />
  <input type="hidden" name="traderdisplayname" value="{{ traderdisplayname }}" />
  <input type="hidden" name="customer_name" value="{{ customer_name }}" />
  <input type="hidden" name="customer_email" value="{{ customer_email }}" />
  <input type="hidden" name="customer_telephone" value="{{ customer_telephone }}" />
  <input type="hidden" name="customer_postcode" value="{{ customer_postcode }}" />
  <input type="hidden" name="customer_house_name_or_number" value="{{ customer_house_name_or_number }}" />
  <input type="hidden" name="transaction_value_pence" value="{{ transaction_value_pence }}" />
  <input type="hidden" name="order_number" value="{{ order_number }}" />
  <input type="hidden" name="email_alert" value="{{ email_alert }}" />
  <input type="hidden" name="cart_type" value="opencart">
  <input type="hidden" name="cart_version" value="{{ oc_version }}">
  <input type="hidden" name="module_version" value="{{ module_version }}">
  <div class="buttons">
    <div class="pull-right">
      <input type="submit" value="{{ button_confirm }}" class="btn btn-primary" />
    </div>
  </div>
</form>